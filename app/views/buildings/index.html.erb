<p id="notice"><%= notice %></p>

<h1>Buildings with Study Spaces</h1>

<% if is_admin? %>
  <%= link_to 'New Building', new_building_path %>
<% end %>
<br>

<html>
  <head>
    <title>Buildings with Study Spaces</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="assets/css/phantom.css" />
    <!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
  </head>
  <body>
    <!-- Wrapper -->
      <div id="wrapper">

        <!-- search bar -->
        <%= form_tag(buildings_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search by Building name" %>
        <%= submit_tag "Search" %>
        <% end %>
        <br>

        <!-- Main -->
          <div id="main">
            <div class="inner">
              <section class="tiles">
                <% i = 1 %>
                <% @buildings.each do |building| %>
                  <article class="style#{i}">
                  <span>
                    <%= link_to image_tag("#{building.name}.jpg"), building, class: "image"%>
                  </span>
                  <h2><%= link_to building.name, building, class: "section-tile_name" %></h2>
                  <% if is_admin? %>
                    <%= link_to 'Edit', edit_building_path(building) %></td>
                    <%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                  </article>
                <% end %>
              </section>
            </div>
          </div>

      </div>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.name, building %></td>
        <% if is_admin? %>
          <td><%= link_to 'Edit', edit_building_path(building) %></td>
          <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <!-- Scripts -->
      <script src="assets/js/jquery.min.js"></script>
      <script src="assets/js/skel.min.js"></script>
      <script src="assets/js/util.js"></script>
      <!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
      <script src="assets/js/main.js"></script>

  </body>
</html>