<p id="notice"><%= notice %></p>

<h1>Buildings with Study Spaces</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <div class="wrapper">
  <div class="content">
    <div class="section_content">
      <ul class="section-tiles">
      <% @buildings.each do |building| %>
        <li class="section-tile">
          <%= link_to building, class: "section-tile_link" %>
          <%= link_to image_tag("#{building.name}.jpg"), building, class: "section-tile_image", style: "background-image" %> 
          <%= link_to building.name, building, class: "section-tile_name" %>     
        </li>
      <% end %>
      </ul>
    </div>
  </div>
  </div>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building.name, building %></td>
        <% if is_admin? %>
          <td><%= link_to 'Edit', edit_building_path(building) %></td>
          <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if is_admin? %>
  <%= link_to 'New Building', new_building_path %>
<% end %>
