<p id="notice"><%= notice %></p>
<h1><strong><%= @room.name %></strong></h1>
<br>
<table>
  <thead>
  <strong>Study Spots:</strong>
  </thead>
  <br>
  <tbody>
    <% @room.study_spots.each do |study_spot| %>
      <tr><%= "Study Spot #{study_spot.id}: " %>
      <% if study_spot.is_open? %>
        <p>available</p>
      <% else %>
        <p>occupied</p>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if is_admin? %>
  <%= link_to 'Edit', edit_room_path(@room) %> |
<% end %>
